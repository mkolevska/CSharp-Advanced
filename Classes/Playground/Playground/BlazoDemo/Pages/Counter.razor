@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me up</button>
<button class="btn btn-secondary" @onclick="DecrementCount">Click me down</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        Console.WriteLine($"Current count is {currentCount}");
    }

    private void DecrementCount()
    {
        currentCount--;
        Console.WriteLine($"Current count is {currentCount}");
    }

}
